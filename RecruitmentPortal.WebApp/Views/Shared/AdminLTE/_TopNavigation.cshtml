    <!-- Left navbar links -->
    <ul class="navbar-nav">
       
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars text-white" style="margin-top : 7px"></i></a>
