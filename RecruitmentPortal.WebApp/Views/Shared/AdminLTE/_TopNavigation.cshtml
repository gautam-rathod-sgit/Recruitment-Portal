<header class="main-header">
    <!-- Logo -->
    <a href="../../index2.html" class="logo">
        <!-- mini logo for sidebar mini 50x50 pixels -->
        <span class="logo-mini">
            <img src="~/img/small_logo.png" height="auto" width="50px" />
        </span>
        <!-- logo for regular state and mobile devices -->
        <span class="logo-lg">
            <img src="~/img/shaligram_logo2.png" height="auto" width="225px" style="padding: 0;"/>
        </span>
    </a>

    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top">
        <!-- Sidebar toggle button-->
        <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </a>

        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">
                <li class="dropdown user user-menu">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <img src="~/img/avatar.png" class="user-image" alt="User Image">
                            <span class="hidden-xs">@User.Identity.Name</span>
                            <i class="caret"></i>
                        </a>

                        <ul class="dropdown-menu dropdown-menu-right">
                            <li class="nav-item border box-shadow">
                                <a class="nav-link font-weight-normal text-white text-lg" asp-area="" asp-controller="Account" asp-action="Profile">
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <span>Admin : Hello @User.Identity.Name !</span>
                                        }
                                        else if (User.IsInRole("Interviewer"))
                                        {
                                            <span>Interviewer : Hello @User.Identity.Name !</span>
                                        }
                                    </a>
                                @*<a class="nav-link font-weight-normal text-white text-lg" asp-area="" asp-controller="Account" asp-action="Profile">Profile</a>*@
                            </li>
                            <li class="nav-item border box-shadow">
                                <a class="nav-link font-weight-normal text-white text-lg" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link font-weight-normal text-white text-lg" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                    }
                </li>
            </ul>
        </div>
    </nav>
</header>