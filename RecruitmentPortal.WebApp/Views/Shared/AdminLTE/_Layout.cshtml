@using RecruitmentPortal.WebApp.Helpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <title>Recruitment Portal</title>
    <partial name="AdminLTE/_Styles" />
    <script src="~/Content/js/jQuery-2.2.0.min.js"></script>
</head>
<body class="sidebar-mini skin-yellow">
    <div class="wrapper">
        <partial name="AdminLTE/_TopNavigation" />
        <partial name="AdminLTE/_MainNavigation" />

        <div class="content-wrapper" style="min-height: 1126px;">
            @RenderBody()
        </div>
        <div class="toast__container">
            <div class="toast__cell">
            </div>
        </div>
        <partial name="AdminLTE/_Footer" />

        <div class="control-sidebar-bg" style="position: fixed;height: auto;"></div>
    </div>
    <partial name="AdminLTE/_Scripts" />
</body>
</html>
<script>
    $(document).ready(function () {
        var errormessage = '@TempData[EnumsHelper.NotifyType.Error.GetDescription()]';
        var successmessage = '@TempData[EnumsHelper.NotifyType.Success.GetDescription()]';

        if (errormessage !== "") {
            notification("Error", errormessage, "error");
        }

        if (successmessage !== "") {
            notification("Success", successmessage, "success");
        }
    });
</script>