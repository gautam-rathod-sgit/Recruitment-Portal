@model RecruitmentPortal.WebApp.ViewModels.LoginViewModel


@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />

    <title>Login</title>
    <partial name="AdminLTE/_Styles" />


</head>
<body>
    <div class="container-fluid">
                    <div class="login-page" style="background-color:lightgray">
                        <div class="login-box box-shadow"
                             style="border:2px solid gray;
                                background-color:azure;
                                margin-bottom:80px;
                                padding-top:30px;
                                padding-right:30px;
                                padding-bottom:30px;
                                padding-left:30px">

                            <div class="login-logo">
                                <b>Recruitment Portal</b>
                            </div>
                            <!-- /.login-logo -->
                            <div class="login-box-body">
                                <p class="login-box-msg">Sign in to start your session</p>

                                <form asp-action="Login">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group position-relative">
                                        <i class="fas fa-envelope text-gray position-absolute" style=" margin-left:87%; margin-top:4%"></i>
                                        <input asp-for="Email" class="form-control" placeholder="Email" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group position-relative">
                                        <i class="fas fa-lock text-gray position-absolute" style="margin-left: 87%; margin-top: 4%"></i>
                                        <input asp-for="Password" class="form-control" placeholder="Password" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                    <div class="form-group form-check">
                                        <label class="form-check-label">
                                            <input class="form-check-input" asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                                        </label>
                                    </div>

                                    <div class="form-group">
                                        <input type="submit" value="Login" class="btn text-white" style="background-color:#ff5722; width:300px" />
                                    </div>
                                </form>
                                <div>
                                    <a asp-action="Index" asp-controller="Home">Back to Home</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
    <partial name="AdminLTE/_Scripts" />
</body>
</html>









