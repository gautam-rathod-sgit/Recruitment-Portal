@model RecruitmentPortal.WebApp.ViewModels.ResetPasswordModel
<h1>Reset Password</h1>
<style type="text/css">
    .required:after {
        content: "*";
        font-weight: bold;
        color: red;
    }
</style>
<div class="row">
    <div class="col-md-4">
        <form asp-action="ResetPassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Password" class="control-label required">New Password</label>
                <input asp-for="Password" class="form-control" required type="password" />

            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label required">Confirm Password</label>
                <input asp-for="ConfirmPassword" class="form-control" required type="password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Email" class="form-control" />
            <input type="hidden" asp-for="Token" class="form-control" />
            <div class="form-group">
                <input type="submit" value="Change Password" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>