@model RecruitmentPortal.WebApp.ViewModels.RegisterViewModel


@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />

    <title>Register</title>
    <partial name="AdminLTE/_Styles" />


</head>
<body>
    <div class="container-fluid">

        <div class="register-page" style="background-color:lightgray">
            <div class="register-box box-shadow"
                 style="border:2px solid gray;
                    background-color:azure;
                    margin-bottom:80px;
                    padding-top:30px;
                    padding-right:30px;
                    padding-bottom:30px;
                    padding-left:30px">

                <div class="register-logo">
                    <b>Recruitment Portal</b>
                </div>

                <div class="register-box-body">
                    <p class="register-box-msg">Register a new User</p>
                </div>

                <form asp-action="Register" enctype="multipart/form-data" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group position-relative">
                        <i class="fas fa-user text-gray position-absolute" style=" margin-left:87%; margin-top:4%"></i>
                        <input asp-for="UserName" class="form-control" placeholder="UserName" required />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group position-relative">
                        <i class="fas fa-envelope text-gray position-absolute" style=" margin-left:87%; margin-top:4%"></i>
                        <input asp-for="Email" class="form-control" placeholder="Email" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group position-relative">
                        <i class="fas fa-briefcase text-gray position-absolute" style=" margin-left:87%; margin-top:4%"></i>
                        <input asp-for="position" class="form-control" placeholder="Position" required />
                        <span asp-validation-for="position" class="text-danger"></span>
                    </div>
                    <div class="form-group position-relative">
                        <i class="fa fa-id-card text-gray position-absolute" style="margin-left: 87%; margin-top: 4%"></i>
                        <input asp-for="skype_id" class="form-control" placeholder="Skype ID" required />
                        <span asp-validation-for="skype_id" class="text-danger"></span>
                    </div>
                    <div class="form-group position-relative">
                        <i class="fas fa-lock text-gray position-absolute" style="margin-left: 87%; margin-top: 4%"></i>
                        <input asp-for="Password" class="form-control" placeholder="Password" required />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group position-relative">
                        <i class="fas fa-lock text-gray position-absolute" style="margin-left: 87%; margin-top: 4%"></i>
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" required />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="FileNew" class="control-label">Upload File:</label><br />
                        <input asp-for="FileNew" id="file" type="file" />
                        <span asp-validation-for="FileNew" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Register" class="btn text-white" style="background-color:#ff5722; width:300px" />
                    </div>
                </form>

                <div>
                    <a asp-action="Index" asp-controller="Account">Back to List</a>
                </div>

            </div>
        </div>
    </div>
    <partial name="AdminLTE/_Scripts" />
</body>
</html>















