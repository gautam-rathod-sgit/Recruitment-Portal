@model RecruitmentPortal.WebApp.ViewModels.JobCategoryViewModel

<h1  class="bg-gradient-gray-dark text-white">Update Category</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateCategoryPost">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" value="@Model.ID" id="ID" name="ID" />
            @Html.HiddenFor(m => m.JobPosts)
            @Html.HiddenFor(m => m.isActive)      
            <div class="form-group">
                <label asp-for="job_category_name" class="control-label">Job Category</label>
                <input asp-for="job_category_name" class="form-control" type="text" pattern="^[a-zA-Z0-9_ ]*$" required />
                <span asp-validation-for="job_category_name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>

