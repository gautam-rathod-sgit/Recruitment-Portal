@model RecruitmentPortal.WebApp.ViewModels.JobCategoryViewModel

@{
    ViewData["Title"] = "AddNewCategory";
}
<h1 class="bg-gradient-gray-dark text-white">Add New Category :</h1>
<div>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>

@if (ViewData["msg"] != null)
{
    <script>window.onload = function () { alert("@ViewData["msg"] already exist !!") }</script>
}

<hr />
<div class="row">
    <div class="col-md-4">

        @using (Html.BeginForm("AddNewCategory", "JobCategory", FormMethod.Post))
        {
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="job_category_name" class="control-label"></label>
                <input asp-for="job_category_name" class="form-control"  type="text" pattern="[a-zA-Z][a-zA-Z ]{2,}" required />
                <span asp-validation-for="job_category_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        }
    </div>
</div>






