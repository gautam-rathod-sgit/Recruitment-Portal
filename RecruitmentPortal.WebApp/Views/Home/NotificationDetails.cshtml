@model RecruitmentPortal.WebApp.ViewModels.JobApplicationViewModel

<div>
    <h1 class="mb-2  bg-gradient-gray-dark text-white">Notify Candidate : </h1>
    <hr />
    <div class="d-flex justify-content-end">
        <div>
            <a asp-action="UpdateNotification" asp-route-id="@Model.ID" class="btn btn-success mr-3">Confirm</a>
        </div>
        <br />
        <div>
            <a asp-action="AdminIndex" class="btn btn-primary mr-3">Back to List</a>
        </div>
    </div>
    <dl class="row">
        <dt class="col-sm-2">
           Candidate Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.candidate.name)
        </dd>
        <dt class="col-sm-2">
            Email-ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.candidate.email)
        </dd>

        <dt class="col-sm-2">
            Phone No.
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.candidate.phone)
        </dd>
        <dt class="col-sm-2">
           Gender
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.candidate.Gender)
        </dd>
        <dt class="col-sm-2">
           Experience
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.candidate.experience)
        </dd>
        <dt class="col-sm-2">
            HSC Percentage
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.candidate.hsc_perc)
        </dd>
        <dt class="col-sm-2">
            HSC Percentage
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.candidate.ssc_perc)
        </dd>
        <dt class="col-sm-2">
           Degree
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.candidate.degree)
        </dd>
    </dl>
</div>
<br />
