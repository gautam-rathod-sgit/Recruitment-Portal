@model IQueryable<RecruitmentPortal.WebApp.ViewModels.JobApplicationViewModel>
@{
    ViewData["Title"] = "Index";
}
@if (ViewData["msg"] != null)
{
    <script>window.onload = function () { alert("@ViewData["msg"]'s Job Application already exist !!") }</script>
}
@{
    int rowcount = 0;
}

@*//Added search box test*@
<div class="text-center">
    <h1 class="display-4 text-center"><b>Active Applications</b></h1>

    <form asp-controller="JobApplication" asp-action="Index" method="get">
        <p>
            Position : <input type="text" name="SearchString">
            <input class="btn btn-primary" type="submit" value="Search" />
        </p>
    </form>
</div>
<table class="table table-sm table-bordered  table-striped">
    <tr><th>S.No.</th><th>Candidate Name</th><th>Job Position</th><th>Details</th></tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@(rowcount+=1).</td>
            <td>@user.candidateName</td>
            <td>@user.position</td>
            <td>
                <form asp-action="Details" asp-route-id="@user.ID" method="post">
                    <button type="submit" class="btn btn-sm btn-primary">
                        Details
                    </button>
                </form>
            </td>
        </tr>
    }
</table>