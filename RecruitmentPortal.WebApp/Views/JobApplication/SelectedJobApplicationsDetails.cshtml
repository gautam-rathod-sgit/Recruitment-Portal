            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.position)
            </dd>
            <dt class="col-sm-4">
                Job Role
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.job_Role)
            </dd>
            <dt class="col-sm-4">
                Rejection Date
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.rejection_date)
            </dd>

            @if (Model.listOfRounds.Count() > 0)
            {
                <dt class="col-sm-4">
                    Interview Rounds
                </dt>
                <dd class="col-sm-8">
                    @foreach (var item in Model.listOfRounds)
                    {
                        var i = 0;
                        <p>@(rowcount+=1).@item</p>
                    }
                </dd>
            }
            else
            {
                <dt class="col-sm-4">
                    Interview Rounds
                </dt>
                <dd class="col-sm-8">
                    No Rounds available.
                </dd>
            }
            @if (Model.rejection_reason != null)
            {
                <dt class="col-sm-4">
                    Remarks
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.rejection_reason)
                </dd>
            }
            else
            {
                <dt class="col-sm-4">
                    Remarks
                </dt>
                <dd class="col-sm-8">
                    No remarks available
                </dd>
            }


        }
