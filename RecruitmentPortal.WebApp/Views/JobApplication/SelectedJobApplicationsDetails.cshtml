        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.candidate.email)
        </dd>

        <dt class="col-sm-4">
            Phone No.
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.candidate.phone)
        </dd>
