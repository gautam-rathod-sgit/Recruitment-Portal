@model RecruitmentPortal.WebApp.ViewModels.JobApplicationViewModel
@if (ViewData["msg"] != null)
{
    <script>window.onload = function () { alert("Round @ViewData["msg"] for candidate already exist !!") }</script>
}
<div>
    <h1 class="mb-2  bg-gradient-gray-dark text-white">Application Status :</h1>
    <div class="d-flex justify-content-end">
        <form asp-action="Index" asp-controller="Schedules" asp-route-id="@Model.candidateId" method="get">
            <button type="submit" class="btn btn-primary mr-2">
                Next Schedule
            </button>
        </form>
        <form>
            @Html.ActionLink("Accept", "UpdateJobApplication", "JobApplication", new { id = Model.ID, complete = true }, new { @class = "btn btn-success mr-2" })
            @Html.ActionLink("Reject", "UpdateJobApplication", "JobApplication", new { id = Model.ID, rejected = true }, new { @class = "btn btn-danger mr-2" })
        </form>
        <div>
            <a asp-action="Index" class="btn btn-primary">Back to List</a>
        </div>
    </div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.candidateName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.candidateName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.position)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.position)
        </dd>

    </dl>
</div>


<table class="table table-sm table-bordered  table-striped">
    <tr><th>Round No.</th><th>Interviewer</th><th>Rating</th><th>Remarks</th><th>Status</th><th>Action</th></tr>
    @foreach (var user in Model.Schedules)
    {
        var i = 0;
        <tr>
            <td>@user.round</td>
            <td>
                @foreach (var item in user.InterviewerNames)
                {
                    <p>@(i += 1).@item.Name</p>
                }
            </td>
            <td>@user.rating</td>
            <td>@user.remark</td>
            <td>@user.statusName</td>
            <td>
                @Html.ActionLink("Edit", "UpdateScheduleOfJobApplication", "JobApplication", new { JobApplicationId = Model.ID, scheduleId = user.ID }, new { @class = "btn btn-success mr-2" })
                @Html.ActionLink("Delete", "UpdateScheduleOfJobApplication", "JobApplication", new { JobApplicationId = Model.ID, scheduleId = user.ID, delete = true }, new { @class = "btn btn-danger mr-2" })
            </td>


        </tr>
    }
</table>

