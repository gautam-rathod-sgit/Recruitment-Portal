@model RecruitmentPortal.WebApp.ViewModels.DepartmentViewModel

<h1  class="bg-gradient-gray-dark text-white">Add New Department</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddNewDeptPost">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" value="@Model.DegreeId" id="DegreeId" name="DegreeId" />
            <input type="hidden" value="@Model.ID" id="ID" name="ID" />
            <div class="form-group">
                <label asp-for="dept_name" class="control-label"></label>
                <input asp-for="dept_name" class="form-control" type="text" pattern="^[a-zA-Z0-9_ ]*$" required/>
                <span asp-validation-for="dept_name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"  class="btn btn-primary">Back to List</a>
</div>

