@model IEnumerable<RecruitmentPortal.WebApp.ViewModels.DegreeViewModel>
@using RecruitmentPortal.WebApp.Helpers
@{
    ViewData["Title"] = "Index";
}


@{ int rowNo = 0; }
<style>
    .mybutton {
        font-size: 25px;
        border-radius: 3px;
        color: #509bac;
        margin-right: 5px;
    }

    .table > thead > tr > th {
        border-bottom: 2px solid #ecf0f5;
    }

    .table > thead > tr > th, .table > tbody > tr > th, .table > tfoot > tr > th, .table > thead > tr > td, .table > tbody > tr > td, .table > tfoot > tr > td {
        border-top: 1px solid #ecf0f5;
    }
</style>

<section class="content">
    <div class="row">
        <div class="col-sm-12">
            <!-- /.box -->

            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">All Qualifications :</h3>
                    <a asp-action="AddNewDegree" class="btn btn-primary pull-right">Add New Degree</a>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="datatable" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Degree</th>
                                <th>Add Department</th>
                                <th>Degree Action</th>
                                <th>Department</th>
                            </tr>
                        </thead>

                    </table>
                </div>
                <!-- /.box-body -->
            </div>
        </div>
    </div>
</section>

<script type="text/javascript">
    $(document).ready(function () {
        bindDatatable();
    });

    function bindDatatable() {

        $('#datatable').DataTable({
            lengthChange: true,
            searching: true,
            ordering: false,
            lengthMenu: [[5, 10, 25, 50, -1], [5,10, 25, 50, "All"]],
            paging: true,
            pagingType: "simple_numbers",
            pageLength: 10,
            fixedColumns: true,
            responsive: true,
            "bDestroy": true,
            "ajax": {
                "url": "@Url.Action("GetAllDegrees", "Qualification")",
                "type": "GET",
                //"data": {},
                "datatype": "json"
            },
            "columns": [
                { "data": "degree_name", "name": "degree_name" },
                {
                    "sClass": "text-center",
                    "mRender": function (data, type, row) {
                        var action = '<a href="#" title="Add" onclick="AddDepartment(\''+ row.encryptedId +'\')" class="btn btn-success">Add Department</a>';
                        return action;
                    }
                },
                {
                    "sClass": "text-center",
                    "mRender": function (data, type, row) {
                        var action = '';
                        if (row.isActive) {
                            action = '<a href="#" title="Edit" onclick="Edit(\'' + row.encryptedId + '\' )"><i class="fa fa-edit mybutton"></i></a>';
                            action += '<a href="#" title="Deactivate" onclick="Deactivate(\'' + row.encryptedId + '\')"><i class="fa fa-check-square mybutton"></i></a>';
                        } else {
                            action = '<a href="#" title="Edit" onclick="Edit(\'' + row.encryptedId + '\')"><i class="fa fa-edit mybutton"></i></a>';
                            action += '<a href="#" title="Activate" onclick="Activate(\'' + row.encryptedId + '\')"><i class="fa fa-times-circle mybutton"></i></a>';
                        }
                        return action;

                    }
                },
                { "data": "dept_name", "name": "dept_name" }
               

                //{
                //    "sClass": "text-center",
                //    "mRender": function (data, type, row) {
                //        var action = '<a href="#" title="Details" onclick="Details(\'' + row.encryptedId + '\')"><i class="fa fa-tasks"></i></a>';
                //        return action;
                //    }
                //}
            ],
            "order": [[0, "asc"]]
        });
    }

    function AddDepartment(id) {
        window.location.href = '@Url.Action("AddNewDept", "Qualification")?id=' + id;
    }
    function Activate(degree_id, deactivate) {
        var url = '@Html.Raw(Url.Action("UpdateDegree", "Qualification", new { id = "degree_id", deactivate = "false" }))';
        var params = url.replace('degree_id', degree_id);
        window.location.href = params;

    }
    function Deactivate(degree_id, deactivate) {
         var url = '@Html.Raw(Url.Action("UpdateDegree", "Qualification", new { id = "degree_id", deactivate = "true" }))';
        var params = url.replace('degree_id', degree_id);
         window.location.href = params;
    }
    function Edit(degree_id, editMode) {
        var url = '@Html.Raw(Url.Action("UpdateDegree", "Qualification", new { id = "degree_id", editMode = "true" }))';
        var params = url.replace('degree_id', degree_id);
        window.location.href = params;
    }
   
    @*function Details(id) {
        window.location.href = '@Url.Action("DetailsJobCategory", "JobCategory")?id=' + id;
    }*@
</script>