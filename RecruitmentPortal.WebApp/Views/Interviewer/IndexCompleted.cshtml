
@using RecruitmentPortal.WebApp.Helpers
@model IQueryable<RecruitmentPortal.WebApp.ViewModels.SchedulesViewModel>

@{
    ViewData["Title"] = "Interviewer IndexCompleted";
}
@{ int rowcount = 0;}
<div class="bg-gradient-gray-dark text-white d-flex justify-content-between pt-2">

    <h2 class="pl-2">My Completed Schedules : </h2>
    <form asp-controller="Interviewer" asp-action="IndexCompleted" method="get">
        <div class="mr-2">
            <input type="text" name="SearchString" placeholder="Job Title" class="mt-2 mr-2">
            <input class="btn btn-primary btn-sm" type="submit" value="Search" style="margin-top: -5px" />
        </div>
    </form>

</div>
@if (Model.Count() > 0)
{
    
    <hr />

    <div class="container-fluid mb-2 box-shadow">
        <table class="table table-sm table-bordered table-striped">
            <tr><th>S.No.</th><th>Candidate Name</th><th>Job Title</th><th>Mode of Interview</th><th>Round</th><th>Details</th></tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(rowcount+=1).</td>
                    <td>@item.candidate_name</td>
                    <td>@item.position</td>
                    <td>@item.mode_of_interview</td>
                    <td>@item.round</td>
                    <td>
                        <form asp-action="ScheduleDetails" asp-route-scheduleId="@item.ID" id="details">
                            <button type="submit" class="btn btn-sm btn-primary">
                                Details
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </table>
    </div>
}
else
{
    <h4 class="text-gray text-center mt-4 text-capitalize"><strong>No Completed Schedules Yet.</strong></h4>
}
