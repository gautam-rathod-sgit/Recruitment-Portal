
@using RecruitmentPortal.WebApp.Helpers
@model IQueryable<RecruitmentPortal.WebApp.ViewModels.SchedulesViewModel>

@{
    ViewData["Title"] = "Interviewer IndexCompleted";
}
@{ int rowcount = 0;}
@if (Model.Count() > 0)
{
    <h1 class="mb-2  bg-gradient-gray-dark text-white">My Completed Schedules : </h1>
    <hr />

    <div class="container-fluid mb-2 box-shadow">
        <table class="table table-sm table-bordered table-striped">
            <tr><th>S.No.</th><th>Candidate Name</th><th>Job Position</th><th>Mode of Interview</th><th>Round</th><th>Details</th></tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(rowcount+=1).</td>
                    <td>@item.candidate_name</td>
                    <td>@item.position</td>
                    <td>@item.mode_of_interview</td>
                    <td>@item.round</td>
                    <td>
                        <form asp-action="ScheduleDetails" asp-route-scheduleId="@item.ID" id="details">
                            <button type="submit" class="btn btn-sm btn-primary">
                                Details
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </table>
    </div>
}
else
{
    <h4 class="text-gray text-center mt-4 text-capitalize"><strong>No Completed Schedules Yet.</strong></h4>
}
